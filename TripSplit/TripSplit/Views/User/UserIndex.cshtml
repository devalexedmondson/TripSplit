@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "UserIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="jumbotron">
        <div class="container">
            <div class="col-md-6">
                <h1 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">TripSplit</h1>
                <h2 class="lead" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Affordable Transportation</h2>
                <h3 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Welcome @(User.Identity.GetUserName())</h3>
            </div>
            <div class="col-md-6">
                <img src="~/Content/Travelcollage.jpg" alt="travelcollage" width="500" height="300">
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-6">
        <center>
            <h2>Create Your Own Trip</h2>
            <p>
                Click the buttons below to choose your travel method.
            </p>
            <a class="btn btn-default" href="http://localhost:2437/User/CreateDrivingTrip">Drive &raquo;</a>
            <a class="btn btn-default" href="http://localhost:2437/User/CreateFlyingTrip">Fly &raquo;</a>
        </center>
    </div>

    <div class="col-md-6" style="margin-top: 95px">
        @* View your own trips button *@
        <a class="btn btn-default" href="http://localhost:2437/User/ViewMyTrips">@(User.Identity.GetUserName()) Trips &raquo;</a>
    </div>
</div>

